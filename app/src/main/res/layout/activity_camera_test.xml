<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_camera_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <!--Camera Test-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#e1e1e1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_camera_test_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Camera Test"
            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/y250"
        android:layout_height="@dimen/x238"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/dbv_camera_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:zxing_framing_rect_height="300dp"
            app:zxing_framing_rect_width="300dp"
            app:zxing_preview_scaling_strategy="fitXY"
            app:zxing_use_texture_view="true">

        </com.journeyapps.barcodescanner.DecoratedBarcodeView>


        <Button
            android:id="@+id/btn_camera_test_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_corners_blue_gray"
            android:padding="20dp"
            android:text="@string/close_exit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25sp" />


    </LinearLayout>


</RelativeLayout>
