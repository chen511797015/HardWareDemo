<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <!--Bluetooth-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#e1e1e1">

        <ImageView
            android:id="@+id/iv_bluetooth_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_bluetooth_back"
            android:text="Bluetooth"
            android:textSize="30sp" />

    </RelativeLayout>


    <!--Bluetooth connection-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth connection"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="@dimen/y300"
            android:layout_height="@dimen/x237"
            android:background="@drawable/rectangle_corners_white_gray"
            android:orientation="vertical">

            <!--Select Nearby Bluetooth Signal,蓝牙开关-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Nearby Bluetooth Signal"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_bluetooth_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rectangle_corners_blue_gray"
                    android:padding="10dp"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e1e1e1"></View>

            <!--展示蓝牙设备-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ListView
                    android:id="@+id/lv_bluetooth_show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </ListView>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e1e1e1"></View>


            <!--Refresh-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:id="@+id/ll_bluetooth_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_bluetooth_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/loading_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refresh"
                        android:textSize="30sp" />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

