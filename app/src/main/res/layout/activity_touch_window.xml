<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_printer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <!--Touchpanel-->
    <RelativeLayout
        android:id="@+id/m_rl_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp72"
        android:background="#e1e1e1">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/iv_back"
            android:text="@string/Touchpanel"
            android:textSize="@dimen/sp30" />

    </RelativeLayout>


    <!--Touchpanel Test-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Touchpanel_Test"
            android:textSize="@dimen/sp30" />

        <LinearLayout
            android:layout_width="@dimen/dp600"
            android:layout_height="@dimen/dp320"
            android:background="@drawable/rectangle_corners_white_gray"
            android:orientation="horizontal">


            <!--多点触控-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_btn_multi_touch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle_corners_blue_gray"
                    android:text="@string/Multi_touch"
                    android:textColor="@color/color_white_black"
                    android:textSize="@dimen/sp25" />


            </RelativeLayout>


            <!--签名测试-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_btn_signature_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle_corners_blue_gray"
                    android:text="@string/Signature_test"
                    android:textColor="@color/color_white_black"
                    android:textSize="@dimen/sp25" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

